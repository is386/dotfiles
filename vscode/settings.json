{
  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Editor
  "editor.fontFamily": "Inconsolata",
  "editor.fontSize": 16,
  "editor.lineHeight": 25,
  "editor.stickyScroll.enabled": false,
  "editor.selectionHighlight": false,
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.bracketPairColorization.enabled": false,
  "editor.formatOnType": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "phase",
  "editor.wordWrap": "on",
  "editor.lineNumbers": "on",
  "editor.autoClosingBrackets": "never",
  "editor.autoClosingQuotes": "never",
  "editor.occurrencesHighlight": "off",

  // Explorer
  "explorer.compactFolders": false,

  // Material Icons
  "material-icon-theme.folders.theme": "classic",
  "material-icon-theme.hidesExplorerArrows": true,

  // Vim
  "vim.useSystemClipboard": true,
  "vim.insertModeKeyBindings": [{ "before": ["j", "j"], "after": ["<Esc>"] }],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<Up>"], "after": [] },
    { "before": ["<Down>"], "after": [] },
    { "before": ["<Left>"], "after": [] },
    { "before": ["<Right>"], "after": [] },
    { "before": ["^"], "after": ["0"] },
    { "before": ["0"], "after": ["^"] }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    { "before": ["<Up>"], "after": [] },
    { "before": ["<Down>"], "after": [] },
    { "before": ["<Left>"], "after": [] },
    { "before": ["<Right>"], "after": [] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<Up>"], "after": [] },
    { "before": ["<Down>"], "after": [] },
    { "before": ["<Left>"], "after": [] },
    { "before": ["<Right>"], "after": [] }
  ],

  // Window
  "window.menuBarVisibility": "compact",
  "window.commandCenter": false,

  // Workbench
  "workbench.statusBar.visible": false,
  "workbench.settings.editor": "json",
  "workbench.colorTheme": "Nord",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.tree.indent": 15,
  "workbench.activityBar.location": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.navigationControl.enabled": false,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#22262f",
    "activityBar.background": "#22262f",
    "editor.background": "#22262f",
    "editorGutter.background": "#22262f",
    "panel.background": "#22262f",
    "sideBar.background": "#22262f",
    "statusBar.background": "#22262f",
    "tab.activeBackground": "#22262f",
    "titleBar.activeBackground": "#22262f"
  }
}
